<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/margin_fragment_xemhinhx"
    android:paddingLeft="@dimen/margin_fragment_xemhinhx"
    android:paddingRight="@dimen/margin_fragment_xemhinhx"
    android:orientation="vertical"
    android:background="@color/backgroundOutsideImage"
    android:padding="@dimen/border_fragment_hinh">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/btn_change_image"
            android:layout_width="@dimen/size_button_in_fragment_xemhinh"
            android:layout_height="@dimen/size_button_in_fragment_xemhinh"
            android:padding="@dimen/margin_button_xoahinh"
            android:src="@drawable/ic_camera_alt_white_24px"/>

        <ImageView
            android:id="@+id/btn_remove_image"
            android:layout_width="@dimen/size_button_in_fragment_xemhinh"
            android:layout_height="@dimen/size_button_in_fragment_xemhinh"
            android:layout_marginLeft="10dp"
            android:padding="@dimen/margin_button_xoahinh"
            android:src="@drawable/ic_close_white_24px" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundImage">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>
    </ScrollView>
</LinearLayout>
